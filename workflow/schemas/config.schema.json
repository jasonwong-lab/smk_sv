{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "dir_run": { "type": "string" },
    "mapper": { "type": "string", "enum": ["minimap2"], "default": "minimap2" },
    "callers": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "clair3",
          "cutesv",
          "debreak",
          "delly",
          "nanosv",
          "nanovar",
          "severus",
          "sniffles",
          "svim",
          "svision"
        ]
      },
      "minItems": 1,
      "default": ["cutesv", "severus", "sniffles", "svim", "svision"]
    },
    "annotators": {
      "type": "array",
      "items": { "type": "string", "enum": ["snpeff", "vep", "annotsv"] },
      "minItems": 1,
      "default": ["snpeff", "vep", "annotsv"]
    },
    "fasta": { "type": "string" },
    "index_minimap2": { "type": "string" },
    "dir_data": { "type": "string" },
    "suffix_fastq": { "type": "string", "default": ".fq.gz" },
    "bed_tandem_repeats": { "type": "string" },
    "min_reads": { "type": "integer", "minimum": 1, "default": 3 },
    "min_length_reads": { "type": "integer", "minimum": 1, "default": 1000 },
    "min_quality_mapping": { "type": "integer", "minimum": 1, "default": 20 },
    "min_coverage": { "type": "integer", "minimum": 1, "default": 6 },
    "min_size": { "type": "integer", "minimum": 1, "default": 100 },
    "max_size": { "type": "integer", "minimum": 0, "default": 10000000 },
    "min_dhffc": { "type": "number", "minimum": 0, "default": 0.7 },
    "max_dhbfc": { "type": "number", "minimum": 0, "default": 1.3 },
    "distance_sv": {
      "type": "object",
      "properties": {
        "BND": { "type": "integer", "minimum": 1, "default": 10 },
        "DEL": { "type": "integer", "minimum": 1, "default": 10 },
        "INS": { "type": "integer", "minimum": 1, "default": 10 },
        "INV": { "type": "integer", "minimum": 1, "default": 10 },
        "DUP": { "type": "integer", "minimum": 1, "default": 10 }
      },
      "minProperties": 1
    },
    "n_callers": {
      "type": "object",
      "properties": {
        "BND": { "type": "integer", "minimum": 1, "default": 3 },
        "DEL": { "type": "integer", "minimum": 1, "default": 3 },
        "INS": { "type": "integer", "minimum": 1, "default": 3 },
        "INV": { "type": "integer", "minimum": 1, "default": 3 },
        "DUP": { "type": "integer", "minimum": 1, "default": 3 }
      },
      "minProperties": 1
    },
    "consider_type": {
      "type": "object",
      "properties": {
        "BND": { "type": "boolean", "default": true },
        "DEL": { "type": "boolean", "default": true },
        "INS": { "type": "boolean", "default": true },
        "INV": { "type": "boolean", "default": true },
        "DUP": { "type": "boolean", "default": true }
      },
      "minProperties": 1
    },
    "consider_strand": {
      "type": "object",
      "properties": {
        "BND": { "type": "boolean", "default": true },
        "DEL": { "type": "boolean", "default": true },
        "INS": { "type": "boolean", "default": true },
        "INV": { "type": "boolean", "default": true },
        "DUP": { "type": "boolean", "default": true }
      },
      "minProperties": 1
    },
    "estimate_distance": {
      "type": "object",
      "properties": {
        "BND": { "type": "boolean", "default": true },
        "DEL": { "type": "boolean", "default": true },
        "INS": { "type": "boolean", "default": true },
        "INV": { "type": "boolean", "default": true },
        "DUP": { "type": "boolean", "default": true }
      },
      "minProperties": 1
    },
    "terms_relative": { "type": "string" },
    "species": { "type": "string" },
    "genome": { "type": "string" },
    "version_snpeff": { "type": "string" },
    "version_vep": { "type": "integer" },
    "version_annotsv": { "type": "string" },
    "cache_snpeff": { "type": "string" },
    "cache_vep": { "type": "string" },
    "cache_annotsv": { "type": "string" },
    "max_size_vep": { "type": "integer", "minimum": 0, "default": 10000000 },
    "config_nanosv": { "type": "string" },
    "bed_nanosv": { "type": "string" },
    "model_clair3": { "type": "string" },
    "bed_nvtr": { "type": "string" },
    "model_svision": { "type": "string" }
  },
  "additionalProperties": false
}
